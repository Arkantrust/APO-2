<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.filereader.controller.FileController">

    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Button fx:id="fileOpenBtn" onAction="#onFileView" text="Open file" />
        <TextArea fx:id="fileViewTA" editable="false"
                  maxHeight="-Infinity" maxWidth="-Infinity"
                  prefHeight="370.0" prefWidth="600.0"
                  BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS" />
      <padding>
         <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
      </padding>
    </VBox>

</AnchorPane>
